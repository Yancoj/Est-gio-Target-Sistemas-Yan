def conta_a(string):
    count = string.lower().count('a')
    if count > 0:
        return f"A letra 'a' aparece {count} vezes na string."
    else:
        return "A letra 'a' n√£o aparece na string."

# Exemplo de uso
texto = input("Informe uma string: ")
resultado = conta_a(texto)
print(resultado)
